<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/filterToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/primary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_collapseMode="pin"/>

    <Button
        android:id="@+id/bActivityFilterApply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="@color/primary"
        android:fontFamily="sans-serif-light"
        android:padding="2dp"
        android:layout_margin="5dp"
        android:background="@drawable/apply_button"
        android:text="@string/apply"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvActivityFilters"
        android:layout_above="@+id/bActivityFilterApply"
        android:layout_below="@id/filterToolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



</RelativeLayout>