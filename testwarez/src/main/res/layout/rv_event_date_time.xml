<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="30dp">

    <TextView
        android:id="@+id/tvRVEventDatetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/secondary_text"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/ivRVEventDatetimePlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvRVEventDatetimePlace"
        android:layout_below="@id/tvRVEventDatetime"
        app:srcCompat="@drawable/ic_place_black_24dp" />

    <TextView
        android:id="@+id/tvRVEventDatetimePlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvRVEventDatetime"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/ivRVEventDatetimePlace"
        android:fontFamily="sans-serif-light"
        android:text="test"
        android:textColor="@color/secondary_text"
        android:textSize="14sp" />
</RelativeLayout>
