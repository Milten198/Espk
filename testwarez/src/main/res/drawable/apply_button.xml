<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:innerRadius="20dp" android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="@color/ripple_background" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" android:innerRadius="20dp">
            <corners android:radius="5dp"/>
            <stroke android:color="@color/ripple_background" android:width="1dp"/>
            <solid android:color="@android:color/white"/>
        </shape>
    </item>
</selector>